
@{
    ViewBag.Title = "SPTheothuonghieu";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="col-lg-9">

    <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1" class=""></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2" class=""></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block img-fluid" src="~/Data/images/anh1.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="~/Data/images/anh2.png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="~/Data/images/anh3.png" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="header" style="color:white;text-align:center;font-size:28px;padding-top:5px">
        @Html.Action("Laytenthuonghieu", "TrangChu")
    </div>

    <div class="row" style="padding-top:10px;padding-left:25px">
        @foreach (var dochoi in Model)
            {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="img-thumbnail">
                    <a href="@Url.Action("Details", "TrangChu", new { id = dochoi.MaDC })">
                        ;
                        <img alt="@dochoi.TenDC" src="@dochoi.Hinhminhhoa" width="200" height="250" />
                    </a>
                    <div>
                        <br />
                        <h4 style="text-align:center">
                            @dochoi.TenDC
                        </h4>
                        <p></p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">★ ★ ★ ★ ☆</small>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- /.row -->
    <script src="~/ScriptsAdmin/bootstrap.min.js"></script>
    <script src="~/ScriptsAdmin/custom.js"></script>
</div>




