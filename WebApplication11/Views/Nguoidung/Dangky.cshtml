
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="col-lg-9" style="padding-bottom:15px">

    <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1" class=""></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2" class=""></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block img-fluid" src="~/Data/images/anh1.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="~/Data/images/anh2.png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="~/Data/images/anh3.png" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="col-md-4 col-md-offset-4">

        <div class="box">
            <div class="content-wrap" style="width:290px">
                <div class="header" style="color:white;text-align:center;font-size:28px;padding-top:5px">
                    Đăng ký
                </div>
                @*<h6 style="text-align: center;text-transform: uppercase;margin-bottom: 25px;font-size: 18px;font-weight: 600;">Đăng ký</h6>*@
                <div class="img-thumbnail" style="padding-top:15px">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                        <input name="HotenKH" class="form-control" size="10000" type="text" placeholder="Họ và tên">
                        @ViewData["Loi1"]
                        <br />
                        <input name="DiachiKH" class="form-control" type="text" placeholder="Địa chỉ">
                        @ViewData["Loi2"]
                        <br />
                        <input name="DienthoaiKH" class="form-control" type="text" placeholder="Số điện thoại">
                        @ViewData["Loi3"]
                        <br />
                        <input name="TenDN" class="form-control" type="text" placeholder="Tài khoản">
                        @ViewData["Loi4"]
                        <br />
                        <input name="Matkhau" class="form-control" type="password" placeholder="Mật khẩu">
                        @ViewData["Loi5"]
                        <br />
                        <input name="Email" class="form-control" type="text" placeholder="Email">
                        @ViewData["Loi6"]

                        <div style="margin-top: 25px;padding-bottom:5px" class="action">
                            <button style="text-transform: uppercase;font-size: 13px;padding: 7px 25px;border-radius: 5px;" type="submit" class="btn btn-primary signup">Login</button>
                        </div>
                    }
                    </div>
                </div>
        </div>
    </div>


    <!-- /.row -->
    <script src="~/ScriptsAdmin/bootstrap.min.js"></script>
    <script src="~/ScriptsAdmin/custom.js"></script>


</div>


